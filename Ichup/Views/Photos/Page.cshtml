@model Ichup.Models.image

@{
    ViewBag.Title = "Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="image-decription-container">
      <div class="container">
        <div class="row">
          <div class="span6">
            <figure>
              <img src="@Model.link_thumbail_big" alt="img" />
            </figure>
          </div> <!-- end span6 -->
          <div class="span6">
            <div class="item-description">
              <h5 class="title">File ID - #@Model.id</h5>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Size</th>
                  <th>Resolution</th>
                  <th>Prize</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <form action="">
                      <label class="checkbox">
                        <input type="checkbox" value="">
                        Thumbnail
                      </label>
                    </form>
                  </td>
                  <td>200x200</td>
                  <td>Free</td>
                </tr>
                <tr>
                  <td>
                    <form action="">
                      <label class="checkbox">
                        <input type="checkbox" value="">
                        Small
                      </label>
                    </form>
                  </td>
                  <td>512x512</td>
                  <td>Free</td>
                </tr>
                <tr>
                  <td>
                    <form action="">
                      <label class="checkbox">
                        <input type="checkbox" value="">
                        Medium
                      </label>
                    </form>
                  </td>
                  <td>1024x1024</td>
                  <td>$0.99</td>
                </tr>
                <tr>
                  <td>
                    <form action="">
                      <label class="checkbox">
                        <input type="checkbox" value="">
                        Large
                      </label>
                    </form>
                  </td>
                  <td>2500x2500</td>
                  <td>$1.59</td>
                </tr>
                <tr>
                  <td>
                    <form action="">
                      <label class="checkbox">
                        <input type="checkbox" value="" checked>
                        XLarge
                      </label>
                    </form>
                  </td>
                  <td>4000x4000</td>
                  <td>$3.49</td>
                </tr>
                <tr>
                  <td>
                    <form action="">
                      <label class="checkbox">
                        <input type="checkbox" value="">
                        XXLarge
                      </label>
                    </form>
                  </td>
                  <td>6000x6000</td>
                  <td>$9.99</td>
                </tr>
                <tr>
                  <td>
                    <form action="">
                      <label class="checkbox">
                        <input type="checkbox" value="">
                        XXXLarge
                      </label>
                    </form>
                  </td>
                  <td>10,000x10,000</td>
                  <td>$19.99</td>
                </tr>
              </tbody>
            </table>
            <div class="item-license">
              <h4 class="title">License Type</h4>
              <form action="">
                <label class="checkbox inline">
                  <input type="checkbox" id="inlineCheckbox1" value="option1"> Free
                </label>
                <label class="checkbox inline">
                  <input type="checkbox" id="inlineCheckbox2" value="option2" checked> Creative
                </label>
                <label class="checkbox inline">
                  <input type="checkbox" id="inlineCheckbox3" value="option3"> Editorial
                </label>
              </form>
            </div> <!-- end item-license -->
            </div> <!-- end item-description -->
          </div> <!-- end span6 -->
        </div> <!-- end row -->
      </div> <!-- end container -->
    </section> <!-- end image-description-container -->
